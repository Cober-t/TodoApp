@using TodoApp.Data.Enum
@model CreateEditProjectViewModel

<h1 class="fw-bold align-items mb-5">Edita o añade un proyecto</h1>

<form method="post" asp-action="AddProject" enctype="multipart/form-data">

    <input hidden value="ProjectID" type="hidden" id="ProjectID" />

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter a Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Value">Value</label>
        <input asp-for="Value" type="number" class="form-control" placeholder="0" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

