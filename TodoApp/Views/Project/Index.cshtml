@model IEnumerable<Project>

<h1 class="fw-bold align-items mb-5">PROJECTOS</h1>

<a asp-controller="Project" asp-action="AddProject" asp-route-id="0" class="mb-5 w-auto btn btn-primary">Add Project</a>

<div class="row align-items-md-stretch gap-5 mt-5">
    @foreach (var project in Model)
    {
        <div class="card border border-4 border-primary rounded-0" style="width: 20%; height: 18rem; text-align:center;">
            <h5 asp-for="Title" class="card-title mt-3" style="width: 100%; text-align:left">@project.Title</h5>
            <a  asp-controller="Project" asp-action="EditProject" asp-route-id="@project.Id"
               class="btn btn-primary" style="width: auto; align-items:right;">
                ...
            </a>
            <img class="card-img-top m-0 p-0" style="align-items:center; justify-content:center; text-align: center" src="..." alt="Card image cap">
        </div>
    }

</div>