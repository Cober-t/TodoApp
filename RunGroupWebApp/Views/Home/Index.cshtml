@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Project>

<h1 class="fw-bold text-align-center">TAREAS</h1>

<div class="row align-items-md-stretch">
    @foreach (Project project in Model)
    {
        <div class="col-md-6">
            <h1>@project.Title</h1>
            <div class="h-100 p-2 text-bg-dark rounded-3 border border-2">
                @if (project.GetSubProjects() != null)
                {
                    foreach (SubProject subProject in project.GetSubProjects())
                    {
                        <h2>@subProject.Title</h2>

                        if (project.GetTasks() != null)
                        {
                            foreach (ToDo task in project.GetTasks())
                            {
                                if  (task.SubProjectID == subProject.Id && subProject.ProjectID == project.Id)
                                {
                                    <p>@task.Title</p>
                                }
                            }
                        }
                    }
                }
            </div>
        </div>
    }
</div>
